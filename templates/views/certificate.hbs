<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
<!-- jquery -->
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
    crossorigin="anonymous"></script>
{{>favicon}}
<link rel="stylesheet" href="/views/css/dashboard.css">
<div class="text-center mt-5">
    {{#if person.statusofVaccination}}
    <div class="btn btn-success hidden" onclick="window.print()">Print Certificate</div>
    {{/if}}

</div>

<div id="printcard" class="extra row mt-4 me-lg-5 ms-lg-5">
    <div id="vaccborder" class="box border border-2 rounded-3 col m-md-5 bg-white">
        <div class="name">
            <img class="imgProfile" src="/images/profile.png" alt="" />
            <h2 class="regName">{{person.name}}</h2>
            <br />
            <span id="regStatus">
                {{#if person.statusofVaccination}}
                <div id="vaccStatus" class="badge rounded-pill bg-success fw-light fs-6">Vaccinated</div>
                {{else}}
                <div id="notvaccStatus" class="badge rounded-pill bg-danger fw-light fs-6">Non-Vaccinated</div>
                {{/if}}
            </span>
        </div>

        <div class="container mb-3">
            <div class="row m-md-2 p-md-1">
                <div class="col p-3">
                    Gender
                    <!-- svg icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-arrow-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
                    </svg>
                    <!-- /svg icon -->
                    {{person.gender}}
                </div>
                <div class="col p-3">
                    DOB
                    <!-- svg icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-arrow-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
                    </svg>
                    <!-- /svg icon -->
                    <span class="claimedRight" maxlength="15">{{person.dob}}</span>

                </div>
            </div>
            <hr />
            <div class="row m-md-2 p-md-1">
                <div class="col p-3">
                    Photo ID
                    <!-- svg icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-arrow-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
                    </svg>
                    <!-- /svg icon -->
                    {{person.idproof}}
                </div>
                <div class="col p-3">
                    ID Number
                    <!-- svg icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-arrow-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
                    </svg>
                    <!-- /svg icon -->
                    {{person.idnumber}}
                </div>
            </div>
            <hr />
            <div class="row m-md-2 p-md-1">
                <div class="col p-3">
                    Date of Vacc.
                    <!-- svg icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-arrow-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
                    </svg>
                    <!-- /svg icon -->
                    <span class="claimedRight" maxlength="15">{{person.dateofvacc}}</span>
                </div>
                <div class="col p-3">
                    Slot of Vacc.
                    <!-- svg icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-arrow-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
                    </svg>
                    <!-- /svg icon -->
                    {{person.slotofvacc}}
                </div>
            </div>

        </div>
    </div>
    <div class="text-center">
        {{#if person.statusofVaccination}}
        <span class="text-danger">You Can Verify your Certificate Using your ID Number</span>
        {{/if}}

    </div>
</div>
<script>
    $(document).ready(function () {

        $('.claimedRight').each(function (f) {

            var newstr = $(this).text().substring(0, 15);
            $(this).text(newstr);

        });
    })
</script>